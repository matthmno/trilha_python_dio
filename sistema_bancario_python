# Importa o m√≥dulo datetime para trabalhar com data e hora
import datetime

#Vari√°veis globais do sistema banc√°rio
saldo = 0
extrato = []
limite_saque = 10
saques_realizados = 0
LIMITE_VALOR_SAQUE = 500

#Linhas para realizar o deposito
def depositar():
    global saldo, extrato
    valor = float(input("Digite o valor do dep√≥sito: R$ "))
    if valor > 0:
        saldo += valor
        # Registra o dep√≥sito com data/hora
        extrato.append(f"{datetime.datetime.now()} - Dep√≥sito: R$ {valor:.2f}")
        print(f"‚úÖ Dep√≥sito de R$ {valor:.2f} realizado com sucesso!")
#Caso o valor n√£o seja positivo, retorne:
    else:
        print("‚ùå Valor inv√°lido para dep√≥sito.")
 
    # Verifica se o limite di√°rio foi atingido 
def sacar():
    global saldo, extrato, saques_realizados
    if saques_realizados >= limite_saque:
        print("‚ùå Limite de saques di√°rios atingido.")
        return

    valor = float(input("Digite o valor do saque: R$ "))
    
    if valor <= 0:
        print("‚ùå Valor inv√°lido para saque.")
    elif valor > saldo:
        print("‚ùå Saldo insuficiente.")
    elif valor > LIMITE_VALOR_SAQUE:
        print(f"‚ùå Saque m√°ximo por opera√ß√£o √© de R$ {LIMITE_VALOR_SAQUE:.2f}.")
    else:
        saldo -= valor
        extrato.append(f"{datetime.datetime.now()} - Saque: R$ {valor:.2f}")
        # Atualiza o contador de saques
        saques_realizados += 1
        print(f"‚úÖ Saque de R$ {valor:.2f} realizado com sucesso!")

def ver_extrato():
    print("\nüìã EXTRATO")
    #Se a lista estiver vazia
    if not extrato:
        print("Nenhuma movimenta√ß√£o realizada.")
    #Percorre e exibe cada movimenta√ß√£o
    else:
        for item in extrato:
            print(item)
    print(f"Saldo atual: R$ {saldo:.2f}\n")

        #Menu de op√ß√µes
def menu():
    while True:
        print("=== MENU BANCO ===")
        print("[1] Depositar")
        print("[2] Sacar")
        print("[3] Extrato")
        print("[0] Sair")
        opcao = input("Escolha uma op√ß√£o: ")

        #Chama a fun√ß√£o correspondente
        if opcao == "1":
            depositar()
        elif opcao == "2":
            sacar()
        elif opcao == "3":
            ver_extrato()
        elif opcao == "0":
            print("Encerrando... Obrigado por usar nosso sistema banc√°rio.")
            break
        else:
            print("‚ùå Op√ß√£o inv√°lida, tente novamente!")

# Iniciar sistema
menu()
